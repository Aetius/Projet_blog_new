


<div class="row col-md-12 justify-content-center">
	

	{% for key, article in results.articles %}  
		{% if key <= max and key >= min %}
			<div class="card col-md-5 text-center mb-5 pb-3 ml-5">
				<div class="card-title pt-3">
					<h3>{{article.title |title }}</h3>
				</div>				
				<div class="card-block text-center px-5">		
					<div class ="card-text pb-3">{{article.description}}
					</div>
					<div class="card-text pb-5">{{article.content | striptags('<br><p>')|slice(0,500)|raw}}...
					</div> 
				</div>
				<div class="card-block pb-2">
					<a type="button" class="btn btn-primary" href="/articles/{{article.id}}">lire la suite </a>
					
				</div>
			</div>
		{% endif %}
	{% endfor %}

</div>
