{% extends "layoutback.twig" %}

{% block title %}Espace personnel{% endblock %}

{% block content %}


<main>

<section class="bg-light page-section" id="">
    <div class="container col-lg-12 m-lg-3">
		<h1 class="text-center">Espace personnel test</h1> 
	</div>
 	<div class="container">	
 		<div class="row col-md-12">
			<div class="col-md-4">
			<p class="m-md-1"> Bonjour "rappel nom et prénom" </p>
			</div>
			<div class="col-md-8"> 
				<div class="row">
					<div class="col-md-12 m-lg-5">
						<h4>Changement de votre mail</h4>
					</div>
					<div class="col-md-6">mail à récupérer
					</div>
					<div class="col-md-6">
						<form method="post" action="">
							<input type="email" id ="mail" name="mail" placeholder="Votre nouvelle adresse mail" required="" minlength="1" maxlength="2000" autofocus="">
							<br/>
							<br/>
							<button type="submit" name="ConnexionPage text-center">Modifier</button>
						</form>
					</div>
				</div>
				<form method="post" action="">
					<div class="row"> 
						<div class="col-md-12 m-lg-5">
							<h4>Changement de votre mot de passe</h4>
						</div>
						<div class="col-md-6">
							<input type="password" id ="oldPassword" name="oldPassword" placeholder="Votre ancien mot de passe" required="" minlength="1" maxlength="20" autofocus="" autocomplete="off">
							<br/>
							<br/>
						</div>
						<div class="col-md-6">
							<input type="password" id ="password" name="password" placeholder="Votre mot de passe" required="false" minlength="1" maxlength="20" autofocus="">
							<br/>
							<br/>
							<input type="password" id ="passwordConfirm" name="passwordConfirm" placeholder="Confirmation de votre mot de passe" required="" minlength="1" maxlength="20" autofocus="">
							<br/>
							<br/>
							<button type="submit" name="ConnexionPage">Modifier</button>
						</div>
					</div>
				</form>
			
				<div class="m-lg-5">
					<h4>Suppression de votre compte </h4>
						<p class="text-right">(Cette action est irréversible)</p>
				</div>
				<div class="row">
					<div class="col-md-12 text-center">
					<button type="submit" id="deleteUser ">Suppression du compte</button>
					</div>
				</div>
			</div>
		</div>
  	</div>
</section>

</main>

{% endblock %}