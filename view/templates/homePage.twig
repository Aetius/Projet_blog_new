          </a>
          <div class="portfolio-caption">
            <h4>Site sur mesure</h4>
            <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
          </div>
        </div>
      </div>
      <div class="text-center">
        <a class="btn btn-primary btn-xl" type="button" href="portofolio">Voir les autres projets</a>
    </div>
  </section>

  <!-- Skills -->
  <section class="bg-light page-section" id="skills">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Mes compétences</h2>
          <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
      </div>
      <div class="row col-lg-12 text-center">
        <div class="col-md-6">
          <h3 class="text-center">Langages de programmation</h3>
          {{ form.skillBar ('PHP', '30%')}}
          {{ form.skillBar ('JavaScript', '15%')}}
        </div>
        <div class="col-md-6">
          <h3 class="text-center">Autres langages</h3>
          {{ form.skillBar ('HTML', '50%')}}
          {{ form.skillBar ('CSS', '50%')}}
        </div>
      </div>
          <div class="col-md-12 text-center">
            <h3 >Framwork, CRM et templating</h3>
          </div>
          <div class="d-flex justify-content-md-center">
            <div class="col-md-12 row text-center">
            {{ form.skillBar ('Bootstrap', '30%', {class:'col-md-6'})}}
            {{ form.skillBar ('Wordpress', '30%', {class:'col-md-6'})}}
            {{ form.skillBar ('Moteur de templating Twig', '20%', {class:'col-md-6'})}}
          </div>
          </div>
        </div>
 
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
        </div>
      </div>

  </section>

  <!-- Contact -->
  <section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Me Contacter</h2>
        </div>
      </div>
      
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-8">
            <div class="row">
              <form method="post" action="">
                <h3 class="section-heading">Formulaire de contact</h3>
                {%if var.success == 1 %}
                  <div class="alert alert-success"> Le mail a bien été envoyé
                  </div>
                {%endif%}
                <div class="row">

                  {{form.input ('surname', 'votre prénom')}}
                  {{form.input ('name', 'votre nom')}}
                  {{form.input ('email', 'votre email', {col:'col-md-12', type:'email'})}}
                </div>
                  {{form.textarea ('message', 'votre message')}}
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button class="btn btn-primary btn-xl text-uppercase" type="submit">Envoyer</button>
                </div>
              </form>
            </div>   
          </div>
          <div class="col-md-4">
            <ul class=" social-buttons">
              <li class="">
                <a href="#">
                  <i class="fab fa-linkedin-in"></i>
                </a>
              </li>
              <li class="">
                <a href="#">
                  <i class="fab fa-github"></i>
                </a>
              </li>
              <li class="">
                <a href="#">
                  <i class="fab fa-lien_cv"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>




