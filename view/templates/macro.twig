
{% macro input (name, placeholder, options=[] ) %}
	<div class="{{options.col | default('col-md-6')}}">
	    <div class="form-group">
	    	<input type="{{options.type | default('text')}}" class="form-control"  id="{{name}}" name="{{name}}"  placeholder="{{placeholder}}"  required="required" data-validation-required-message="Merci d'entrer {{placeholder}}">
	    	<p class="help-block text-danger"></p>
		</div>
	</div>
{% endmacro %}

