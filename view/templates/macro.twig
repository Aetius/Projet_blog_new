		<div class="form-group">
			
				<textarea type="text" class="form-control" id="{{name}}" name="{{name}}" placeholder="{{placeholder}}" rows="{{rows}}" cols="{{cols}}" data-validation-required-message="Merci d'Ã©crire {{placeholder}}"></textarea>
		
		</div>
	
